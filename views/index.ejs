<% include partials/header %>
  <main>
    <a href="/create" class="m-4 hover:bg-yellow-300 bg-yellow-400 text-white px-4 py-2 rounded">Create new</a>
    <div class="container p-4">

      <% array.forEach(element=> { %>
        <div class="flex flex-col bg-white shadow-lg p-4 w-100 md:w-100 lg:w-1/2">
          <div class="flex flex-col">
            <h2 class="text-xl mt-3">
              <%= element.title %> >
            </h2>
            <h2 class="text-sm mt-3">
              <%= element.name %>
                <%= element.email %> >
            </h2>
            <h2 class="text-sm mt-3 text-current">
              <%= element.date_time %> >
            </h2>
            <p class="mt-3">
              <%= elemet.content %> >
            </p>
            <div class="flex flex-row mt-3">
              <a class="bg-yellow-400 text-white px-3 py-1 rounded mx-1" href="/update/<%= element._id %> ">Update</a>
              <a class="bg-red-400 text-white px-3 py-1 rounded mx-1" href="/delete/<%= element._id %>">Delete</a>
            </div>
          </div>
          <% }) %>
        </div>
    </div>
  </main>

  <% include partials/footer %>